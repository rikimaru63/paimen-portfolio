  <script>
    // IntersectionObserver reveal (subtle)
    (function(){
      const els = Array.from(document.querySelectorAll('.reveal'));
      const reduce = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (reduce){
        els.forEach(el => el.classList.add('is-in'));
        return;
      }

      const io = new IntersectionObserver((entries) => {
        for (const e of entries){
          if (!e.isIntersecting) continue;
          e.target.classList.add('is-in');
          io.unobserve(e.target);
        }
      }, { threshold: 0.14, rootMargin: '0px 0px -6% 0px' });

      els.forEach(el => io.observe(el));

      const y = document.getElementById('y');
      if (y) y.textContent = String(new Date().getFullYear());
    })();

    // Dify Chat Integration
    const botConfigs = {
      'customer-support': {
        name: 'AIã‚«ã‚¹ã‚¿ãƒãƒ¼ã‚µãƒãƒ¼ãƒˆ',
        icon: '<svg viewBox="0 0 48 48" fill="none"><path d="M10 8h28a2 2 0 012 2v18a2 2 0 01-2 2H18l-6 6v-6h-2a2 2 0 01-2-2V10a2 2 0 012-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M16 17h16M16 23h10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>',
        apiKey: 'app-rBM3FGBOni800iQ4JPyofEij',
        apiUrl: '/api/chat',
        suggestions: ['è¿”å“ãƒ»äº¤æ›ã«ã¤ã„ã¦', 'æ³¨æ–‡çŠ¶æ³ã‚’ç¢ºèªã—ãŸã„', 'é€æ–™ã¯ã„ãã‚‰ï¼Ÿ']
      },
      'knowledge-assistant': {
        name: 'ç¤¾å†…ãƒŠãƒ¬ãƒƒã‚¸ã‚¢ã‚·ã‚¹ã‚¿ãƒ³ãƒˆ',
        icon: '<svg viewBox="0 0 48 48" fill="none"><path d="M14 6h14l10 10v26a2 2 0 01-2 2H14a2 2 0 01-2-2V8a2 2 0 012-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M28 6v10h10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M18 26h12M18 32h8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>',
        apiKey: 'app-oou3nkIRmYWmSSErFfrt8yMk',
        apiUrl: '/api/chat',
        suggestions: ['å‹¤å‹™æ™‚é–“ã‚’æ•™ãˆã¦', 'æœ‰çµ¦ã®ç”³è«‹æ–¹æ³•ã¯ï¼Ÿ', 'ãƒªãƒ¢ãƒ¼ãƒˆãƒ¯ãƒ¼ã‚¯ã®ãƒ«ãƒ¼ãƒ«']
      },
      'shopping-advisor': {
        name: 'AIã‚·ãƒ§ãƒƒãƒ”ãƒ³ã‚°ã‚¢ãƒ‰ãƒã‚¤ã‚¶ãƒ¼',
        icon: '<svg viewBox="0 0 48 48" fill="none"><path d="M12 18h24l-2 22H14L12 18z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M18 18v-4a6 6 0 1112 0v4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>',
        apiKey: 'app-h5bxRoUr5doWm0d7TZEP1g',
        apiUrl: '/api/chat',
        suggestions: ['äºˆç®—1ä¸‡å††ã§ãƒ—ãƒ¬ã‚¼ãƒ³ãƒˆ', 'åœ¨å®…ãƒ¯ãƒ¼ã‚¯ç’°å¢ƒã‚’æ•´ãˆãŸã„', 'ãŠã™ã™ã‚ã®ã‚®ãƒ•ãƒˆã¯ï¼Ÿ']
      }
    };

    let currentBot = null;
    let currentUserId = null;
    let currentConversationId = null;

    // Generate random user ID
    function generateUserId() {
      return 'user_' + Math.random().toString(36).substr(2, 9) + '_' + Date.now();
    }

    // Open chat modal
    function openChat(botKey) {
      currentBot = botConfigs[botKey];
      currentUserId = generateUserId();
      currentConversationId = null;
      
      const overlay = document.getElementById('chatOverlay');
      const chatBotIcon = document.getElementById('chatBotIcon');
      const chatBotName = document.getElementById('chatBotName');
      const chatMessages = document.getElementById('chatMessages');
      
      // Build suggestions HTML
      const suggestions = currentBot.suggestions || [];
      let suggestionsHtml = '';
      if (suggestions.length > 0) {
        suggestionsHtml = '<div class="suggestions" id="suggestionsContainer">';
        suggestions.forEach(text => {
          suggestionsHtml += `<button class="suggestion-btn" data-text="${text}">${text}</button>`;
        });
        suggestionsHtml += '</div>';
      }
      
      // Reset chat
      chatMessages.innerHTML = `
        <div class="message">
          <div class="message-avatar">${currentBot.icon}</div>
          <div class="message-bubble">
            ã“ã‚“ã«ã¡ã¯ï¼ãŠæ°—è»½ã«ã”è³ªå•ãã ã•ã„ã€‚
          </div>
        </div>
        ${suggestionsHtml}
      `;
      
      // Suggestion click handlers
      chatMessages.querySelectorAll('.suggestion-btn').forEach(btn => {
        btn.addEventListener('click', function() {
          const text = this.dataset.text;
          const container = document.getElementById('suggestionsContainer');
          if (container) container.remove();
          sendMessage(text);
        });
      });
      
      // Update header
      chatBotIcon.innerHTML = currentBot.icon;
      chatBotName.textContent = currentBot.name;
      
      // Show modal
      overlay.classList.add('active');
      
      // Focus input
      document.getElementById('chatInput').focus();
    }

    // Close chat modal
    function closeChat() {
      document.getElementById('chatOverlay').classList.remove('active');
      currentBot = null;
      currentUserId = null;
      currentConversationId = null;
    }

    // Add message to chat
    function addMessage(content, isUser = false) {
      const chatMessages = document.getElementById('chatMessages');
      const messageDiv = document.createElement('div');
      messageDiv.className = 'message' + (isUser ? ' user' : '');
      
      messageDiv.innerHTML = `
        <div class="message-avatar">${isUser ? 'You' : currentBot.icon}</div>
        <div class="message-bubble">${content}</div>
      `;
      
      chatMessages.appendChild(messageDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    // Send message to Dify API
    async function sendMessage(message) {
      if (!currentBot || !message.trim()) return;
      
      // Remove suggestions if still visible
      const suggestionsEl = document.getElementById('suggestionsContainer');
      if (suggestionsEl) suggestionsEl.remove();
      
      const sendBtn = document.getElementById('sendBtn');
      const chatInput = document.getElementById('chatInput');
      const typingIndicator = document.getElementById('typingIndicator');
      
      // Disable input
      sendBtn.disabled = true;
      chatInput.disabled = true;
      
      // Show user message
      addMessage(message, true);
      
      // Show typing indicator
      typingIndicator.classList.add('active');
      
      try {
        const requestBody = {
          inputs: {},
          query: message,
          response_mode: "blocking",
          conversation_id: currentConversationId || "",
          user: currentUserId,
          files: []
        };

        const response = await fetch(currentBot.apiUrl, {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${currentBot.apiKey}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(requestBody)
        });

        if (!response.ok) {
          throw new Error(`API error: ${response.status}`);
        }

        const data = await response.json();
        
        // Update conversation ID
        if (data.conversation_id && !currentConversationId) {
          currentConversationId = data.conversation_id;
        }
        
        // Show bot response
        const botMessage = data.answer || 'ã™ã¿ã¾ã›ã‚“ã€å›ç­”ã‚’ç”Ÿæˆã§ãã¾ã›ã‚“ã§ã—ãŸã€‚';
        addMessage(botMessage);
        
      } catch (error) {
        console.error('Dify API Error:', error);
        addMessage('ç”³ã—è¨³ã”ã–ã„ã¾ã›ã‚“ã€‚ç¾åœ¨ã€ã“ã®ãƒœãƒƒãƒˆã¯ä¸€æ™‚çš„ã«åˆ©ç”¨ã§ãã¾ã›ã‚“ã€‚');
      } finally {
        // Hide typing indicator
        typingIndicator.classList.remove('active');
        
        // Re-enable input
        sendBtn.disabled = false;
        chatInput.disabled = false;
        chatInput.value = '';
        chatInput.focus();
      }
    }

    // Event listeners
    document.addEventListener('DOMContentLoaded', function() {
      // Bot card click handlers
      document.querySelectorAll('.bot-card').forEach(card => {
        card.addEventListener('click', function() {
          const botKey = this.dataset.bot;
          openChat(botKey);
        });
      });

      // Close modal handlers
      document.getElementById('closeChat').addEventListener('click', closeChat);
      document.getElementById('chatOverlay').addEventListener('click', function(e) {
        if (e.target === this) closeChat();
      });

      // Send button handler
      document.getElementById('sendBtn').addEventListener('click', function() {
        const input = document.getElementById('chatInput');
        sendMessage(input.value);
      });

      // Enter key handler
      document.getElementById('chatInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
          e.preventDefault();
          sendMessage(this.value);
        }
      });

      // Escape key handler
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && document.getElementById('chatOverlay').classList.contains('active')) {
          closeChat();
        }
      });
    });
  </script>
